# Show the stash status icon
zstyle :prompt:pure:git:stash show yes

zstyle :prompt:pure:execution_time color "#fe640b"
zstyle :prompt:pure:path color "#1e66f5"

zstyle :prompt:pure:prompt:continuation color "#8839ef"
zstyle :prompt:pure:prompt:error color "#d20f39"
zstyle :prompt:pure:prompt:success color "#40a02b"

zstyle :prompt:pure:git:action color "#dc8a78"
zstyle :prompt:pure:git:arrow color "#179299"
zstyle :prompt:pure:git:branch color "#8839ef"
zstyle :prompt:pure:git:branch:cached color "#d20f39"
zstyle :prompt:pure:git:dirty color "#df8e1d"
zstyle :prompt:pure:git:stash color "#179299"
