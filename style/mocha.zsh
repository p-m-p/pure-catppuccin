# Show the stash status icon
zstyle :prompt:pure:git:stash show yes

zstyle :prompt:pure:execution_time color "#fab387"
zstyle :prompt:pure:path color "#89b4fa"

zstyle :prompt:pure:prompt:continuation color "#585b70"
zstyle :prompt:pure:prompt:error color "#f38ba8"
zstyle :prompt:pure:prompt:success color "#a6e3a1"

zstyle :prompt:pure:git:action color "#f5e0dc"
zstyle :prompt:pure:git:arrow color "#74c7ec"
zstyle :prompt:pure:git:branch color "#cba6f7"
zstyle :prompt:pure:git:branch:cached color "#f38ba8"
zstyle :prompt:pure:git:dirty color "#f9e2af"
zstyle :prompt:pure:git:stash color "#585b70"
