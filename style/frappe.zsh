# Show the stash status icon
zstyle :prompt:pure:git:stash show yes

zstyle :prompt:pure:execution_time color "#ef9f76"
zstyle :prompt:pure:path color "#8caaee"

zstyle :prompt:pure:prompt:continuation color "#626880"
zstyle :prompt:pure:prompt:error color "#e78284"
zstyle :prompt:pure:prompt:success color "#a6d189"

zstyle :prompt:pure:git:action color "#f2d5cf"
zstyle :prompt:pure:git:arrow color "#85c1dc"
zstyle :prompt:pure:git:branch color "#ca9ee6"
zstyle :prompt:pure:git:branch:cached color "#e78284"
zstyle :prompt:pure:git:dirty color "#e5c890"
zstyle :prompt:pure:git:stash color "#626880"
