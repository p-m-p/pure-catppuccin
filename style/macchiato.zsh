# Show the stash status icon
zstyle :prompt:pure:git:stash show yes

zstyle :prompt:pure:execution_time color "#f5a97f"
zstyle :prompt:pure:path color "#8aadf4"

zstyle :prompt:pure:prompt:continuation color "#c6a0f6"
zstyle :prompt:pure:prompt:error color "#ed8796"
zstyle :prompt:pure:prompt:success color "#a6da95"

zstyle :prompt:pure:git:action color "#f4dbd6"
zstyle :prompt:pure:git:arrow color "#8bd5ca"
zstyle :prompt:pure:git:branch color "#c6a0f6"
zstyle :prompt:pure:git:branch:cached color "#ed8796"
zstyle :prompt:pure:git:dirty color "#eed49f"
zstyle :prompt:pure:git:stash color "#8bd5ca"
