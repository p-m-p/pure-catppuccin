zstyle :prompt:pure:git:stash show yes
zstyle :prompt:pure:path color $blue
zstyle :prompt:pure:execution_time color $peach
zstyle :prompt:pure:prompt:error color $red
zstyle :prompt:pure:prompt:success color $green
zstyle :prompt:pure:prompt:continuation color $mauve
zstyle :prompt:pure:git:branch color $mauve
zstyle :prompt:pure:git:branch:cached color $red
zstyle :prompt:pure:git:action color $rosewater
zstyle :prompt:pure:git:arrow color $teal
zstyle :prompt:pure:git:stash color $teal
zstyle :prompt:pure:git:dirty color $yellow

